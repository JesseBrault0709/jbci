generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  sessions Session[]
}

model Session {
  id      Int      @id @default(autoincrement())
  sid     String   @unique
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
  created DateTime @default(now())
  expires DateTime
}
